<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        https://nexus.apps.envone.dev.registry.eua.gov.ua/nexus/repository/extensions/com/epam/digital/data/platform/liquibase-ext-schema/latest/liquibase-ext-schema-latest.xsd">

    <changeSet author="g.prokhorov@indevlab.com" id="Delete a row in SCOPES">
        <ext:delete tableName="certificate_scope">
            <ext:where>abbreviation='PL'</ext:where>
        </ext:delete>
    </changeSet>

    <changeSet author="g.prokhorov@indevlab.com" id="Drop a column in SCOPES">
        <ext:dropColumn tableName="certificate_scope">
            <column name="crated_at"/>
        </ext:dropColumn>
    </changeSet>

</databaseChangeLog>
